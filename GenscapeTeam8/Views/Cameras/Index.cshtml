<div class="row">
    <div class="col-lg-12">
        <h1>Cameras</h1>
        <p class="lead">Here are the cameras for the application.</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table zebra-table">
            <thead>
                <tr>
                    <th>Facility Name</th>
                    <th>Camera Name</th>
                    <th># of Watch Points</th>
                    <th>Url</th>
                    <th>Path</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Cameras.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center">No cameras found</td>
                    </tr>
                }
                else
                {
                    foreach (var camera in ViewBag.Cameras)
                    {
                        <tr data-camera-id="@camera.CameraID" data-camera-moniker="@(camera.Moniker == null ? String.Empty : @Html.Raw(camera.Moniker))">
                            <td>@(camera.Facility == null ? String.Empty : camera.Facility.Name)</td>
                            <td>@camera.Name</td>
                            <td>@camera.WatchPoints.Count</td>
                            <td>@camera.Url</td>
                            <td>@camera.Path</td>
                            <td>@Html.ActionLink("View Watch Points", "Index", "WatchPoints", new { id = @camera.CameraID }, null)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
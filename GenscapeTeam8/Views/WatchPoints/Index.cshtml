<div class="row">
    <div class="col-lg-12">
        <h1>Watch Points</h1>
        <p class="lead">Here are the current watch points.</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <table class="table zebra-striped" >
            <thead>
                <tr>
                    <th>Camera</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.WatchPoints.Count == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center">No watch points found</td>
                    </tr>
                }
                else
                {
                    foreach (var watchPoint in ViewBag.WatchPoints)
                    {
                        <tr data-image-parameters-id="@watchPoint.WatchPointID">
                            <td>@(watchPoint.Camera == null ? "" : watchPoint.Camera.Name)</td>
                            <td>@watchPoint.Name</td>
                            <td>@Html.ActionLink("View Watch Point", "Detail", "WatchPoints", new { id = watchPoint.WatchPointID }, null)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
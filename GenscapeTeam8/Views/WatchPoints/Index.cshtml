<div class="row">
    <div class="col-lg-12">
        <h1>Watch Points</h1>
        <p class="lead">Here are the current watch points.</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <table class="table zebra-striped" >
            <thead>
                <tr>
                    <th>Facility</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.WatchPoints.Count == 0)
                {
                    <tr>
                        <td colspan="2" class="text-center">No watch points found</td>
                    </tr>
                }
                else
                {
                    foreach (var watchPoint in ViewBag.WatchPoints)
                    {
                        <tr data-image-parameters-id="@watchPoint.WatchPointId">
                            <td>@watchPoint.Camera.Facility.Name</td>
                            <td>@watchPoint.Name</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>